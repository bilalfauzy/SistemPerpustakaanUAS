<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundsilver"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tvDaftarBuku"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Riwayat Peminjaman Buku"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_list_pinjaman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDaftarBuku"
        android:background="@color/white"
        tools:listitem="@layout/item_list_buku" />

</RelativeLayout>